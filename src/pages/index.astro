---
import { StrudualOverlay } from '@/qwik/StrudualOverlay';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Strudual - Strudel + Punctual</title>
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body.strudual-page {
      width: 100%;
      height: 100vh;
      overflow: hidden;
      background-color: black;
      background: radial-gradient(at top left, rgba(140, 104, 47, 0.17), transparent), 
                  radial-gradient(at bottom right, rgba(25, 0, 135, 0.15), transparent);
      font-family: system-ui, -apple-system, sans-serif;
    }
    .cm-editor {
      height: 100% !important;
    }
    .cm-editor.cm-focused {
      outline: none !important;
    }
    /* Normal line-height for most lines */
    .cm-content, .cm-line {
      line-height: 1.5em !important;
    }
    /* Extra line-height only for lines containing sliders */
    .cm-line:has(.cm-slider) {
      line-height: max(1.5em, 28px) !important;
    }
    /* Center line numbers in gutter */
    .cm-gutterElement {
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }
    /* Prevent drag/selection on slider widgets */
    .cm-slider {
      user-select: none;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
    }
    .cm-slider input[type="range"] {
      cursor: pointer;
      pointer-events: auto;
    }
  </style>
</head>
<body class="strudual-page">
  <StrudualOverlay 
    strudelCode='s("bd sd, hh*8")'
    punctualCode={'ilo * circle [0,0] 0.5 >> add;\nimid * hline 0 0.01 >> add;\nihi * vline 0 0.01 >> add;'}
  />
</body>
</html>
