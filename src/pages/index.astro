---
import { StrudelPunctualOverlay } from '@/qwik/StrudelPunctualOverlay';
import { StrudelPunctualAttribution } from '@/qwik/StrudelPunctualAttribution';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Strudual - Strudel + Punctual</title>
  <style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body.strudual-page {
      width: 100%;
      height: 100vh;
      overflow: hidden;
      background: black;
      font-family: system-ui, -apple-system, sans-serif;
    }
  </style>
</head>
<body class="strudual-page">
  <StrudelPunctualAttribution client:load />
  
  <StrudelPunctualOverlay 
    client:load
    strudelCode='s("bd sd, hh*8")'
    punctualCode={'ilo * circle [0,0] 0.5 >> add;\nimid * hline 0 0.01 >> add;\nihi * vline 0 0.01 >> add;'}
    height="100vh"
  />
</body>
</html>
